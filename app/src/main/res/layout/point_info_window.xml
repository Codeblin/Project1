<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/info_window_background">
    
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">

            <ImageView
                android:id="@+id/info_window_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"/>
            <TextView
                android:id="@+id/location_info_window_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:background="@color/colorBackgroundOpaque"
                android:fontFamily="@font/comfortaa_regular"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/descr_info_window_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1.6"
            android:padding="4dp"
            android:textSize="14sp"
            android:fontFamily="@font/comfortaa_regular" />

        <Button
            android:id="@+id/info_window_btn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/see_video"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:layout_marginBottom="8dp"
            android:padding="6dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/comfortaa_regular"
            android:textColor="@color/colorWhiteDark"/>

    </LinearLayout>

</LinearLayout>